<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"

    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/border">


        <com.example.privilegepagetest.ui.RoundImageView
            android:id="@+id/iv_order_land"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            app:radius="7.5dp"
            android:background="@drawable/land" />

        <TextView
            android:id="@+id/tv_order_land_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_order_land"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="长丰精选草莓育苗地"
            android:gravity="center"
            android:background="@color/green"
            android:textSize="20sp"
            android:textColor="@color/white">
        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_order_land"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:text="租赁期限："
            android:textSize="17sp"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/tv_land_cycle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_order_land"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:text="半年期（2022年到期）"
            android:textSize="15sp"
            android:textColor="@color/black">
        </TextView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_order_land"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:text="土地面积："
            android:textSize="17sp"
            android:textColor="@color/black">
        </TextView>
        <TextView
            android:id="@+id/tv_land_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_order_land"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="70dp"
            android:text="100"
            android:textSize="15sp"
            android:textColor="@color/black">
        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_order_land"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="70dp"
            android:text="KM²"
            android:textSize="16sp"
            android:textColor="@color/black">
        </TextView>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/white" />

</LinearLayout>
